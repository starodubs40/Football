@using Football.Models;
@model Football.Models.League;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meata name="viewport" content="width=device-width" />
    <title> List </title>
</head>

<body>
    <h2> All Leagues </h2>

   <div>
        <h2> Name: @Model.Name </h2>
   </div>

            
   @foreach(var match in Model.Matches)
    {         
        <div>     
            <p1>@match.Round </p1>
            <p1>@match.Date </p1>
            <p1> @match.Team1 </p1>
            <p1> @match.Team2 </p1>
            <p1>@match.Score.Ft[0] </p1>
            <p1> @match.Score.Ft[1] </p1>
        </div>          
    }

</body>
</html>